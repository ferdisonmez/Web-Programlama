<form class="form-horizontal">
    <fieldset>

        <!-- Form Name -->
        <legend>İş İlanı Giriş Formu</legend>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="company">Şirket İsmi</label>
            <div class="col-md-4">
                <input id="company" name="company" type="text" placeholder="Şirket İsmi" class="form-control input-md">

            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="location">Lokasyon</label>
            <div class="col-md-4">
                <input id="location" name="location" type="text" placeholder="Lokasyon" class="form-control input-md">

            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="position">Pozisyon</label>
            <div class="col-md-4">
                <input id="position" name="position" type="text" placeholder="Pozisyon" class="form-control input-md">

            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="experience">Deneyim</label>
            <div class="col-md-4">
                <input id="experience" name="experience" type="text" placeholder="Junior-Mid-Senior" class="form-control input-md">

            </div>
        </div>

        <!-- Textarea -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="textarea">Açıklama</label>
            <div class="col-md-4">
                <textarea class="form-control" id="textarea" name="textarea"></textarea>
            </div>
        </div>

        <!-- Button -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="submit">Onaya Gönder</label>
            <div class="col-md-4">
                <input type="submit" id="submit" name="submit" class="btn btn-primary">
            </div>
        </div>

    </fieldset>
</form>

